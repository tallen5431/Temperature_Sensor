body { font-family: 'Inter', sans-serif; }
.navbar-brand { letter-spacing: 0.5px; color: #00bcd4 !important; }
.navbar-dark .nav-link.active { border-bottom: 2px solid #00bcd4; }
.card { border-radius: 0.75rem; box-shadow: 0 2px 6px rgba(0,0,0,0.2); }
.btn-info { background-color: #00bcd4; border: none; }
.btn-info:hover { background-color: #0097a7; }
.btn-primary { background-color: #198754; border: none; }
.btn-primary:hover { background-color: #157347; }
.footer { background-color: #111; color: #bbb; }
html, body, .container-fluid { background-color: #101214; color: #f8f9fa; }
